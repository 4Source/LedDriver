{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "LedDriver_Basic",
        "type": "cppdbg",
        "request": "launch",
        "MIMode": "gdb",
        "miDebuggerPath": "P:/espressif/tools/tools/xtensa-esp-elf-gdb/12.1_20221002/xtensa-esp-elf-gdb/bin/xtensa-esp32s3-elf-gdb.exe",
        "program": "${workspaceFolder}/examples/LedDriver_Basic/build/LedDriver_Basic.elf",
        "windows": {
          "program": "${workspaceFolder}\\examples\\LedDriver_Basic\\build\\LedDriver_Basic.elf"
        },
        "cwd": "${workspaceFolder}\\examples\\LedDriver_Basic",
        "setupCommands": [
          { "text": "target extended-remote :3333" },
          { "text": "set remote hardware-watchpoint-limit 2"},
          { "text": "mon reset halt" },
          { "text": "thb app_main" },
          { "text": "flushregs" }
        ],
        "externalConsole": false,
        "logging": {
          "engineLogging": true
        }
      }
    ]
  }

